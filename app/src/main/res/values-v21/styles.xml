<resources>>

    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light">
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:windowBackground">@color/almostWhite</item>
        <item name="colorPrimary">@color/indigo500</item>
        <item name="colorPrimaryDark">@color/indigo700</item>
        <item name="colorAccent">@color/indigoAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:colorButtonNormal">@color/indigoAccent</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/indigoAccent</item>
        <item name="colorControlHighlight">@color/indigoAccent</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="showLabels">false</item>
        <item name="alertDialogTheme">@style/StyledDialog</item>
        <item name="textAboveThumbsColor">@android:color/black</item>
    </style>

    <style name="StyledDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/almostWhite</item>
        <item name="colorPrimaryDark">@color/indigo700</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <item name="background">@drawable/actionbar_tab_indicator</item>
    </style>

</resources>
